{
   "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
         "*": [
            "node_modules/*",
            "src/types/*"
         ]
      }
   },
   "include": [
      "src"
   ]
}